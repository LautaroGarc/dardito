<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <%- include('partials/header') %>
</head>
<body class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-cyan-50">
    <div class="min-h-screen flex items-center justify-center p-4">
        <div class="w-full max-w-md">
            <!-- Logo y título -->
            <div class="text-center mb-8">
                <div class="mx-auto w-20 h-20 bg-gradient-to-r from-blue-500 to-cyan-500 rounded-full flex items-center justify-center mb-4 shadow-lg transform hover:scale-105 transition-transform duration-200">
                    <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
                    </svg>
                </div>
                <h1 class="text-3xl font-bold text-gray-900 mb-2">Dardito</h1>
                <p class="text-gray-600">Sistema de gestión ágil para proyectos escolares</p>
            </div>

            <!-- Formulario de login -->
            <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
                <form method="POST" action="/auth" class="space-y-6" id="loginForm" enctype="application/x-www-form-urlencoded">
                    <div>
                        <label for="token" class="block text-sm font-medium text-gray-700 mb-2">
                            <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m0 0a2 2 0 012 2m-2-2h-5m4 0V9a2 2 0 00-2-2M9 7v10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 0v10"></path>
                            </svg>
                            Token de acceso
                        </label>
                        <div class="relative">
                            <input 
                                type="text" 
                                id="token" 
                                name="token" 
                                required 
                                placeholder="7d55e3dda13b5c0b9da7b98fceaae50b"
                                autocomplete="off"
                                spellcheck="false"
                                class="w-full px-4 py-3 pl-12 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 bg-gray-50 focus:bg-white font-mono text-sm"
                            >
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                                </svg>
                            </div>
                        </div>
                        <p class="mt-1 text-xs text-gray-500">Token de 32 caracteres hexadecimales</p>
                    </div>

                    <!-- Mostrar error si existe -->
                    <% if (typeof error !== 'undefined' && error) { %>
                        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
                            <div class="flex items-center">
                                <svg class="w-5 h-5 text-red-400 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <span class="text-red-800 text-sm font-medium"><%= error %></span>
                            </div>
                        </div>
                    <% } %>

                    <!-- Botón de login rápido para admin (SOLO DESARROLLO) -->
                    <div class="bg-gray-50 rounded-lg p-3">
                        <p class="text-xs text-gray-600 mb-2">Quick login (desarrollo):</p>
                        <button 
                            type="button" 
                            onclick="document.getElementById('token').value='7d55e3dda13b5c0b9da7b98fceaae50b'"
                            class="text-xs bg-purple-100 hover:bg-purple-200 text-purple-700 px-2 py-1 rounded transition-colors"
                        >
                            Admin Token
                        </button>
                    </div>

                    <button 
                        type="submit" 
                        id="submitBtn"
                        class="w-full bg-gradient-to-r from-blue-500 to-cyan-500 hover:from-blue-600 hover:to-cyan-600 text-white font-semibold py-3 px-4 rounded-lg transition-all duration-200 transform hover:scale-[1.02] focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 shadow-lg disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:scale-100"
                    >
                        <span id="btnText">Iniciar Sesión</span>
                    </button>
                </form>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('loginForm');
            const tokenInput = document.getElementById('token');
            const submitButton = document.getElementById('submitBtn');
            const btnText = document.getElementById('btnText');
            
            // Validación en tiempo real
            tokenInput.addEventListener('input', function() {
                let value = this.value.replace(/\s/g, '');
                this.value = value;
                
                if (value.length === 32) {
                    this.classList.remove('border-gray-300', 'border-red-300');
                    this.classList.add('border-green-400', 'bg-green-50');
                } else if (value.length > 0) {
                    this.classList.remove('border-gray-300', 'border-green-400', 'bg-green-50');
                    this.classList.add('border-yellow-400', 'bg-yellow-50');
                } else {
                    this.classList.remove('border-green-400', 'border-yellow-400', 'bg-green-50', 'bg-yellow-50');
                    this.classList.add('border-gray-300');
                }
            });
            
            form.addEventListener('submit', function(e) {
                const token = tokenInput.value.trim();
                console.log('Enviando token:', token);
                
                if (token.length !== 32) {
                    e.preventDefault();
                    alert('El token debe tener exactamente 32 caracteres');
                    return;
                }
                
                submitButton.disabled = true;
                btnText.innerHTML = 'Autenticando...';
                tokenInput.value = token;
            });
            
            tokenInput.focus();
        });
    </script>

    <%- include('partials/footer') %>
</body>
</html>