                    <!-- Información del usuario -->
                    <div class="hidden sm:flex items-center space-x-3">
                        <div class="text-right">
                            <div class="text-sm font-medium text-gray-900"><%= user.nickname %></div>
                            <div class="text-xs text-gray-500 flex items-center">
                                <div class="w-2 h-2 rounded-full mr-1 
                                    <% if (user.rol === 'auditor') { %>bg-purple-400<% } %>
                                    <% if (user.rol === 'lider') { %>bg-blue-400<% } %>
                                    <% if (user.rol === 'scrumMaster') { %>bg-green-400<% } %>
                                    <% if (user.rol === 'miembro') { %>bg-yellow-400<% } %>
                                "></div>
                                <%= user.rol %>
                            </div>
                        </div>
                        
