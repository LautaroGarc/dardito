                                    <% if (user.rol === 'auditor') { %>
                                        <a href="/backlog/Proy2" class="block px-4 py-2 text-sm text-gray-700 hover:bg-blue-50 hover:text-blue-600">Proyecto 2</a>
                                    <% } %>
                                </div>
