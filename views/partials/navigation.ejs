                <% if (typeof user !== 'undefined' && user) { %>
                    <a href="/dashboard" class="block px-3 py-2 rounded-lg text-sm font-medium text-gray-700 hover:text-blue-600 hover:bg-blue-50">Dashboard</a>
                    
                    <% if (user.rol === 'lider' || user.rol === 'auditor') { %>
                        <div class="px-3 py-1 text-xs font-semibold text-gray-500 uppercase tracking-wide">Product Backlog</div>
                        <a href="/backlog/GenT" class="block px-3 py-2 rounded-lg text-sm text-gray-600 hover:text-blue-600 hover:bg-blue-50">GenT</a>
                        <a href="/backlog/Proy" class="block px-3 py-2 rounded-lg text-sm text-gray-600 hover:text-blue-600 hover:bg-blue-50">Proyecto</a>
                        
                        <div class="px-3 py-1 text-xs font-semibold text-gray-500 uppercase tracking-wide">Sprints</div>
                        <a href="/sprint/GenT/sprint1" class="block px-3 py-2 rounded-lg text-sm text-gray-600 hover:text-blue-600 hover:bg-blue-50">GenT - Sprint 1</a>
                        <a href="/sprint/Proy/sprint1" class="block px-3 py-2 rounded-lg text-sm text-gray-600 hover:text-blue-600 hover:bg-blue-50">Proyecto - Sprint 1</a>
