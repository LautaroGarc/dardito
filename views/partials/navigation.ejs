                            </svg>
                            Métricas
                        </a>
                    <% } %>

                    <!-- Panel Admin (solo auditores) -->
                    <% if (user.rol === 'auditor') { %>
                        <a href="/admin" class="nav-link px-3 py-2 rounded-lg text-sm font-medium text-gray-700 hover:text-purple-600 hover:bg-purple-50 transition-all duration-200">
