        console.error('Error de red:', error);
        
        if (error.message.includes('Failed to fetch') || error.message.includes('NetworkError')) {
            showToast('Error de conexi√≥n. Verifica tu conexi√≥n a internet.', 'error');
        } else if (error.message.includes('404')) {
            showToast('Recurso no encontrado. Puede que el proyecto no est√© configurado.', 'warning');
        } else if (error.message.includes('403')) {
            showToast('No tienes permisos para realizar esta acci√≥n.', 'error');
        } else {
            showToast('Error del servidor: ' + error.message, 'error');
        }
    }

