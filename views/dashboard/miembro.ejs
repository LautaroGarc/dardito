    // ============================================
    
    function guardarEstadoLocal() {
        const estado = {
            currentSection,
            selectedProject,
            selectedSprint,
            timestamp: Date.now()
        };
        
        try {
            // Usar variable en memoria en lugar de localStorage
            window.dashboardState = estado;
        } catch (error) {
            console.warn('No se puede guardar estado:', error);
        }
    }

    function restaurarEstadoLocal() {
        try {
            const estado = window.dashboardState;
            
            if (estado && (Date.now() - estado.timestamp) < 300000) { // 5 minutos
                currentSection = estado.currentSection || 'dashboard';
                selectedProject = estado.selectedProject;
                selectedSprint = estado.selectedSprint;
                
                if (currentSection === 'backlog') {
                    mostrarSeccionBacklog();
