<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Admin - DARDITO</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="bg-gray-50">
    <!-- Navigation Header -->
    <nav class="bg-white shadow-sm border-b">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <h1 class="text-xl font-semibold text-gray-900">DARDITO - Administrador</h1>
                </div>
                <div class="flex items-center space-x-4">
                    <span class="text-sm text-gray-600">Bienvenido, <%= user.nickname %></span>
                    <a href="/logout" class="bg-red-600 hover:bg-red-700 text-white px-3 py-2 rounded-md text-sm font-medium">
                        Cerrar Sesión
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
        <!-- Estadísticas Globales -->
        <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
            <div class="bg-white overflow-hidden shadow rounded-lg">
                <div class="p-5">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <div class="w-8 h-8 bg-blue-600 rounded-md flex items-center justify-center">
                                <span class="text-white font-semibold">E</span>
                            </div>
                        </div>
                        <div class="ml-5 w-0 flex-1">
                            <dl>
                                <dt class="text-sm font-medium text-gray-500 truncate">Total Equipos</dt>
                                <dd class="text-lg font-medium text-gray-900"><%= estadisticasGlobales.totalEquipos %></dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-white overflow-hidden shadow rounded-lg">
                <div class="p-5">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <div class="w-8 h-8 bg-green-600 rounded-md flex items-center justify-center">
                                <span class="text-white font-semibold">A</span>
                            </div>
                        </div>
                        <div class="ml-5 w-0 flex-1">
                            <dl>
                                <dt class="text-sm font-medium text-gray-500 truncate">Equipos Activos</dt>
                                <dd class="text-lg font-medium text-gray-900"><%= estadisticasGlobales.equiposActivos %></dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-white overflow-hidden shadow rounded-lg">
                <div class="p-5">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <div class="w-8 h-8 bg-yellow-600 rounded-md flex items-center justify-center">
                                <span class="text-white font-semibold">U</span>
                            </div>
                        </div>
                        <div class="ml-5 w-0 flex-1">
                            <dl>
                                <dt class="text-sm font-medium text-gray-500 truncate">Total Usuarios</dt>
                                <dd class="text-lg font-medium text-gray-900"><%= estadisticasGlobales.totalUsuarios %></dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-white overflow-hidden shadow rounded-lg">
                <div class="p-5">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <div class="w-8 h-8 bg-purple-600 rounded-md flex items-center justify-center">
                                <span class="text-white font-semibold">P</span>
                            </div>
                        </div>
                        <div class="ml-5 w-0 flex-1">
                            <dl>
                                <dt class="text-sm font-medium text-gray-500 truncate">Total Proyectos</dt>
                                <dd class="text-lg font-medium text-gray-900"><%= estadisticasGlobales.totalProyectos %></dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Gráfico de Composición de Equipos -->
        <div class="bg-white shadow rounded-lg mb-8">
            <div class="px-4 py-5 sm:p-6">
                <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Composición de Equipos</h3>
                <div class="w-full h-80">
                    <canvas id="equiposChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Lista de Equipos -->
        <div class="bg-white shadow overflow-hidden sm:rounded-md">
            <div class="px-4 py-5 sm:px-6">
                <h3 class="text-lg leading-6 font-medium text-gray-900">Equipos Registrados</h3>
                <p class="mt-1 max-w-2xl text-sm text-gray-500">Información detallada de todos los equipos.</p>
            </div>
            <ul class="divide-y divide-gray-200">
                <% Object.keys(grupos).forEach(nombreGrupo => { %>
                <li class="px-4 py-4 sm:px-6">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <div class="flex-shrink-0 h-10 w-10">
                                <div class="h-10 w-10 rounded-full bg-gray-300 flex items-center justify-center">
                                    <span class="text-sm font-medium text-gray-700"><%= nombreGrupo.slice(-1) %></span>
                                </div>
                            </div>
                            <div class="ml-4">
                                <div class="text-sm font-medium text-gray-900"><%= nombreGrupo %></div>
                                <div class="text-sm text-gray-500">
                                    Estado: 
                                    <% if (grupos[nombreGrupo].started === 'y') { %>
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                            Activo
                                        </span>
                                    <% } else { %>
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                            Inactivo
                                        </span>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                        <div class="flex items-center space-x-2">
                            <% 
                            const miembrosGrupo = Object.values(usuarios).filter(user => user.grupo === nombreGrupo);
                            const rolesGrupo = {};
                            miembrosGrupo.forEach(user => {
                                rolesGrupo[user.rol] = (rolesGrupo[user.rol] || 0) + 1;
                            });
                            %>
                            <span class="text-sm text-gray-500">
                                <%= miembrosGrupo.length %> miembros
                            </span>
                            <button onclick="mostrarDetallesEquipo('<%= nombreGrupo %>')" 
                                    class="inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-blue-700 bg-blue-100 hover:bg-blue-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                Ver Detalles
                            </button>
                        </div>
                    </div>
                    
                    <!-- Miembros del equipo (colapsable) -->
                    <div id="detalles-<%= nombreGrupo %>" class="hidden mt-4 pl-14">
                        <div class="border-t border-gray-200 pt-4">
                            <h4 class="text-sm font-medium text-gray-900 mb-2">Miembros del Equipo</h4>
                            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                                <% miembrosGrupo.forEach(miembro => { %>
                                <div class="bg-gray-50 p-3 rounded-lg">
                                    <div class="flex items-center">
                                        <div class="flex-shrink-0">
                                            <span class="inline-flex items-center justify-center h-6 w-6 rounded-full bg-gray-600 text-xs font-medium text-white">
                                                <%= miembro.nickname.charAt(0).toUpperCase() %>
                                            </span>
                                        </div>
                                        <div class="ml-2 min-w-0 flex-1">
                                            <p class="text-sm font-medium text-gray-900 truncate"><%= miembro.nickname %></p>
                                            <p class="text-xs text-gray-500 capitalize"><%= miembro.rol %></p>
                                            <% if (miembro.stats && miembro.stats[0] > 0) { %>
                                            <p class="text-xs text-blue-600">
                                                Tiempo en llamadas: <%= (miembro.stats[0] / 3600).toFixed(1) %>h
                                            </p>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                </li>
                <% }) %>
            </ul>
        </div>
    </div>

    <script>
        // Configurar gráfico de composición de equipos
        const ctx = document.getElementById('equiposChart').getContext('2d');
        const equiposData = {
            labels: [<% Object.keys(composicionEquipos).forEach((grupo, index) => { %>'<%= grupo %>'<%= index < Object.keys(composicionEquipos).length - 1 ? ',' : '' %><% }) %>],
            datasets: [{
                label: 'Líder',
                data: [<% Object.keys(composicionEquipos).forEach((grupo, index) => { %><%= composicionEquipos[grupo].roles.lider || 0 %><%= index < Object.keys(composicionEquipos).length - 1 ? ',' : '' %><% }) %>],
                backgroundColor: 'rgba(59, 130, 246, 0.8)',
            }, {
                label: 'Scrum Master',
                data: [<% Object.keys(composicionEquipos).forEach((grupo, index) => { %><%= composicionEquipos[grupo].roles.scrumMaster || 0 %><%= index < Object.keys(composicionEquipos).length - 1 ? ',' : '' %><% }) %>],
                backgroundColor: 'rgba(16, 185, 129, 0.8)',
            }, {
                label: 'Miembros',
                data: [<% Object.keys(composicionEquipos).forEach((grupo, index) => { %><%= composicionEquipos[grupo].roles.miembro || 0 %><%= index < Object.keys(composicionEquipos).length - 1 ? ',' : '' %><% }) %>],
                backgroundColor: 'rgba(245, 158, 11, 0.8)',
            }]
        };

        new Chart(ctx, {
            type: 'bar',
            data: equiposData,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    x: {
                        stacked: true,
                    },
                    y: {
                        stacked: true,
                        beginAtZero: true
                    }
                },
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    title: {
                        display: true,
                        text: 'Distribución de Roles por Equipo'
                    }
                }
            }
        });

        // Función para mostrar/ocultar detalles del equipo
        function mostrarDetallesEquipo(nombreGrupo) {
            const detalles = document.getElementById(`detalles-${nombreGrupo}`);
            detalles.classList.toggle('hidden');
        }

        // Cargar estadísticas adicionales cada 30 segundos
        setInterval(async () => {
            try {
                const response = await fetch('/api/estadisticas/global');
                const data = await response.json();
                // Actualizar elementos del DOM con nuevos datos si es necesario
                console.log('Estadísticas actualizadas:', data);
            } catch (error) {
                console.warn('Error actualizando estadísticas:', error);
            }
        }, 30000);
    </script>
</body>
</html>